{
    "name": "ts-backend-production-template",
    "version": "1.0.0",
    "description": "Node js Backend setup for production ",
    "license": "ISC",
    "author": "ankitDev2655",
    "main": "src/server.js",
    "scripts": {
        "dist": "tsc",
        "test": "node test.js",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "format:write": "prettier . --write",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:write",
            "npm run format:fix"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^20.0.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.36.0",
        "@types/express": "^5.0.3",
        "@types/node": "^24.5.2",
        "@types/source-map-support": "^0.5.10",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.1",
        "nodemon": "^3.1.10",
        "prettier": "3.6.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.45.0"
    },
    "dependencies": {
        "cross-env": "^10.1.0",
        "dotenv-flow": "^4.1.0",
        "express": "^5.1.0",
        "source-map-support": "^0.5.21",
        "winston": "^3.18.3"
    }
}
