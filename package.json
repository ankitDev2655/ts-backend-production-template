{
  "name": "ts-backend-production-template",
  "version": "1.0.0",
  "description": "Node js Backend setup for production ",
  "license": "ISC",
  "author": "ankitDev2655",
  "type": "commonjs",
  "main": "src/server.ts",
  "scripts": {
    "dist": "tsc",
    "test": "node test.js",
    "start": "node dist/server.js",
